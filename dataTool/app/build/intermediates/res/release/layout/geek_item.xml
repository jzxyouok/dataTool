<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/geek_content"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/geek_title"
                    android:text="极客前进"
                    android:textColor="#ff0f0f0f"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:id="@+id/user_img"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/datatool3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/geek_label"
                    android:text="Info"
                    android:ellipsize="end"
                    android:textColor="#ff0f0f0f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/geek_time"
                    android:text="Info"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ff0f0f0f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_gravity="right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:text="极客前进"
                    android:lines="1"
                    android:layout_marginLeft="155dp"
                    android:textColor="#ff0f0f0f"
                    android:gravity="center"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout><!-- From: file:/E:/code/dataTool/dataTool/app/src/main/res/layout/geek_item.xml -->