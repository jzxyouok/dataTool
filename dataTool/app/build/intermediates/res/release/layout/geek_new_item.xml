<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    ripple:rv_type="rectangle"
    app:rv_color="#ffff2c33">
    <!--关于RippleView的信息配置在网址https://github.com/traex/RippleEffect-->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:layout_width="?android:actionBarSize"-->
    <!--android:layout_height="?android:actionBarSize"-->

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/datatool3" />

                    <TextView
                        android:id="@+id/geek_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:layout_toLeftOf="@id/user_img"
                        android:lineSpacingMultiplier="1.2"
                        android:ellipsize="end"
                        android:textColor="@color/primary_text_default_material_light"
                        android:textSize="18.0sp"
                        android:layout_marginRight="16.0dip"
                        android:maxLines="2"
                        android:focusable="false"
                        android:text="我是标题sfsdfsdfdsfdsfsdfdsfdsf"
                        />

                    <TextView
                        android:id="@+id/geek_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:text="8：00"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/geek_label"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:layout_marginLeft="16sp"
                        android:ellipsize="end"
                        android:layout_toRightOf="@id/geek_time"
                        android:text="袜子@无厘头"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>
</com.andexert.library.RippleView><!-- From: file:/E:/code/dataTool/dataTool/app/src/main/res/layout/geek_new_item.xml -->