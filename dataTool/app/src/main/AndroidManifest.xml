<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xuxu.datatool">

    <application
        android:allowBackup="true"
        android:name=".Activity.app"
        android:icon="@mipmap/datatool3"
        android:label="@string/app_name">
        <activity
            android:name=".Activity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WelcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/RedTheme"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.WeatherActivity"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.JobActivity"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.CNewsDetailsActivity"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.NewsContentActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.WebViewActivity"
            android:theme="@style/WebTheme"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.DesActivity" android:theme="@android:style/Theme.Dialog"/>
        <service android:name=".Activity.DesService"></service>
        <receiver
            android:name=".utils.MyReceiver">
            <intent-filter>
                <action android:name="alarmOne"/>
                <action android:name="com.test.BC_ACTION"/>
            </intent-filter>
        </receiver>
